    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch Launcher",
            "request": "launch",
            "mainClass": "db.project.Launcher",
            "projectName": "app"
        },
        {
            "type": "java",
            "name": "Launch Person import from CSV",
            "request": "launch",
            "mainClass": "db.project.Launcher",
            "projectName": "app",
            "args": ["--load-persons", "${workspaceFolder}\\schema\\people.csv"]
        },
        {
            "type": "java",
            "name": "Launch auto login",
            "request": "launch",
            "mainClass": "db.project.Launcher",
            "projectName": "app",
            "args": ["--credentials", "root", "password"]
        }
    ]
}